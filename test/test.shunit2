#------------------------------------------------
# default
#------------------------------------------------
test_default() {
    zetopt def val:v @FOO %BAR=bar %BAZ...3=baz
    zetopt parse
    local v="$(zetopt default val)"
    assertEquals "$ZETOPT_CFG_ARG_DEFAULT bar baz" "$v"
    v=$(zetopt default val BAZ,^)
    assertEquals "baz bar $ZETOPT_CFG_ARG_DEFAULT" "$v"
}

test_default_ERR_def() {
    zetopt def val:v @FOO %BAR=bar %BAZ...3
    assertFalse $?
}

test_default_noarg() {
    zetopt def val:v %=foo %=bar
    zetopt parse -v
    local v="$(zetopt argv val)"
    assertEquals "foo bar" "$v"
}

test_default_1arg_for_3defs() {
    zetopt def val:v % % %=bar
    zetopt parse -v foo
    local v="$(zetopt argv val)"
    assertEquals "foo $ZETOPT_CFG_ARG_DEFAULT bar" "$v"
}

test_default_noarg3() {
    zetopt def val:v % %...5
    zetopt parse -v
    local v="$(zetopt argv val)"
    assertEquals "$ZETOPT_CFG_ARG_DEFAULT $ZETOPT_CFG_ARG_DEFAULT" "$v"
}

test_default_nouse() {
    zetopt def val:v @FOO=foo @BAR=bar
    zetopt parse
    local v="$(zetopt argv val)"
    assertEquals "foo bar" "$v"
}

test_default_ERR_no_fallback() {
    zetopt def val:v @FOO @BAR=bar
    zetopt parse
    local v="$(zetopt argv val -N)"
    assertEquals "" "$v"
    zetopt argv val -N
    assertFalse $?
}

