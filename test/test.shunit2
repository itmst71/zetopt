#------------------------------------------------
# argv
#------------------------------------------------
test_argv() {
    zetopt def val:v @FOO @BAR %BAZ...3
    zetopt parse -v foo bar baz1 baz2 baz3
    local v="$(zetopt argv val FOO BAR BAZ,$)"  
    assertEquals "[argv] @FOO @BAR %BAZ...3 --> FOO BAR BAZ,$" "foo bar baz1 baz2 baz3" "$v"
}

test_argv_array() {
    zetopt def val:v @FOO @BAR %BAZ %...3
    zetopt parse -v foo bar baz1 baz2 baz3 baz4
    local arr=
    zetopt argv -a arr val ^ BAR BAZ,-2
    assertEquals '[argv] -a arr val ^ BAR BAZ,-2' "foo bar baz1 baz2 baz3" "${arr[*]}"
}

test_argv_variable() {
    zetopt def val:v @FOO @BAR %BAZ %...3
    zetopt parse -v foo bar baz1 baz2 baz3 baz4
    local var=
    zetopt argv -v var val ^ BAR BAZ,-2
    assertEquals '[argv] -a arr val ^ BAR BAZ,-2' "foo bar baz1 baz2 baz3" "$var"
}

test_argv_CFG_IFS() {
    zetopt def val:v @FOO @BAR %BAZ...3
    zetopt parse -v foo bar baz1 baz2 baz3
    ZETOPT_CFG_VALUE_IFS=:
    local v="$(zetopt argv val $,^)"  
    assertEquals "[argv] @FOO @BAR %BAZ...3 --> $,^" "baz3:baz2:baz1:bar:foo" "$v"
}

test_argv_array_newlines() {
    zetopt def val:v @FOO
    zetopt parse -v $'line1\nline2\nline3\n\nline5\n\n\n'
    local arr=
    zetopt argv -a arr val FOO
    assertEquals "[argv] -a arr val FOO" $'line1\nline2\nline3\n\nline5\n\n\n' "${arr[@]}"
}

#------------------------------------------------
# validator
#------------------------------------------------
test_def_validator() {
    zetopt validator ALPH '^[A-Z][A-Z\ ]+$'
    zetopt def alph:A @TEXT~ALPH
    zetopt parse -A "CAPITAL ALPHABET"
    assertTrue $?
    zetopt parse -A "capital alphabet"
    assertFalse $?
}

test_def_validator_with_ignore_case_flag() {
    zetopt validator -i ALPH '^[A-Z][A-Z\ ]+$'
    zetopt def alph:A @TEXT~ALPH
    zetopt parse -A "capital alphabet"
    assertTrue $?
}

test_def_validator_with_not_flag() {
    zetopt validator -n ALPH '^[A-Z][A-Z\ ]+$'
    zetopt def alph:A @TEXT~ALPH
    zetopt parse -A "capital alphabet"
    assertTrue "[validator] capital alphabets" $?
    zetopt parse -A "CAPITAL ALPHABET"
    assertFalse $?
}

validator_wkport(){ [[ ${1-} =~ ^[0-9]+$ && $1 -ge 1024 && $1 -le 65535 ]]; }
test_def_validator_with_func_flag() {
    zetopt validator -f wkport validator_wkport
    zetopt def port:p @PORT~wkport
    zetopt parse -p 1024
    assertTrue $?
    zetopt parse -p 1023
    assertFalse $?
    zetopt parse -p 65535
    assertTrue $?
    zetopt parse -p 65536
    assertFalse $?
}

test_def_validator_chain() {
    zetopt validator ALPH '^[A-Z][A-Z\ ]+$'
    zetopt validator MAX5 '^.{1,5}$'
    zetopt def alph:A @TEXT~ALPH,MAX5
    zetopt def char:C "@TEXT[=~ALPH,MAX5]"
    zetopt parse -A "ALPHA"
    assertTrue $?
    zetopt parse -C "ALPHA"
    assertTrue $?
    zetopt parse -A "ALPHABET"
    assertFalse $?
    zetopt parse -C "ALPHABET"
    assertFalse $?
}

