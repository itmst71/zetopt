# Test zetopt with shUnit2
# { bash | zsh } <FILE_PATH>
# shUnit2
# https://github.com/kward/shunit2

if [ -n "${ZSH_VERSION-}" ]; then
    SHUNIT_PARENT=$0
    setopt SH_WORD_SPLIT
    #setopt KSH_ARRAYS
fi
. "$ZETOPT_DIST_FILE"
type zetopt >/dev/null 2>&1 || return 1
oneTimeSetUp() { :; }
suite() { :; }

__index__=1
setUp() {
    printf "%2s: " $((__index__++))
    zetopt init
    ZETOPT_CFG_AUTOVAR=true
    ZETOPT_CFG_ERRMSG_SCRIPT_ERROR=false
    ZETOPT_CFG_ERRMSG_USER_ERROR=false
    ZETOPT_CFG_ERRMSG_STACKTRACE=false
}
